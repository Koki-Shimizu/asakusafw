<assembly
	xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
	<id>prod-windgate</id>
	<formats>
		<format>tar.gz</format>
	</formats>
	<includeBaseDirectory>false</includeBaseDirectory>

	<dependencySets>
		<dependencySet>
			<scope>test</scope>
			<useProjectArtifact>false</useProjectArtifact>
			<outputDirectory>core/lib</outputDirectory>
			<includes>
				<include>com.asakusafw:asakusa-runtime</include>
			</includes>
			<outputFileNameMapping>${artifact.artifactId}.${artifact.extension}</outputFileNameMapping>
			<fileMode>0644</fileMode>
			<directoryMode>0775</directoryMode>
		</dependencySet>
		<dependencySet>
			<scope>test</scope>
			<useProjectArtifact>false</useProjectArtifact>
			<outputDirectory>windgate/lib</outputDirectory>
			<includes>
				<include>com.asakusafw:asakusa-windgate-bootstrap</include>
				<include>com.asakusafw:asakusa-windgate-core</include>
				<include>ch.qos.logback:logback-classic</include>
				<include>ch.qos.logback:logback-core</include>
				<include>org.slf4j:slf4j-api</include>
			</includes>
			<fileMode>0644</fileMode>
			<directoryMode>0775</directoryMode>
		</dependencySet>
		<dependencySet>
			<scope>test</scope>
			<useProjectArtifact>false</useProjectArtifact>
			<outputDirectory>windgate/plugin</outputDirectory>
			<includes>
				<include>com.asakusafw:asakusa-windgate-hadoopfs</include>
				<include>com.asakusafw:asakusa-windgate-jdbc</include>
				<include>com.asakusafw:asakusa-windgate-stream</include>
			</includes>
			<fileMode>0644</fileMode>
			<directoryMode>0775</directoryMode>
		</dependencySet>
		<dependencySet>
			<scope>test</scope>
			<useProjectArtifact>false</useProjectArtifact>
			<outputDirectory>yaess/lib</outputDirectory>
			<includes>
				<include>com.asakusafw:asakusa-yaess-bootstrap</include>
				<include>com.asakusafw:asakusa-yaess-core</include>
				<include>commons-cli:commons-cli</include>
				<include>ch.qos.logback:logback-classic</include>
				<include>ch.qos.logback:logback-core</include>
				<include>org.slf4j:slf4j-api</include>
			</includes>
			<fileMode>0644</fileMode>
			<directoryMode>0775</directoryMode>
		</dependencySet>
		<dependencySet>
			<scope>test</scope>
			<useProjectArtifact>false</useProjectArtifact>
			<outputDirectory>yaess/plugin</outputDirectory>
			<includes>
				<include>com.asakusafw:asakusa-yaess-jsch</include>
				<include>com.asakusafw:asakusa-yaess-paralleljob</include>
				<include>com.jcraft:jsch</include>
			</includes>
			<fileMode>0644</fileMode>
			<directoryMode>0775</directoryMode>
		</dependencySet>
		<dependencySet>
			<scope>test</scope>
			<useProjectArtifact>false</useProjectArtifact>
			<outputDirectory>yaess/tools</outputDirectory>
			<includes>
				<include>com.asakusafw:asakusa-yaess-tools</include>
				<include>com.google.code.gson:gson</include>
			</includes>
			<fileMode>0644</fileMode>
			<directoryMode>0775</directoryMode>
		</dependencySet>
	</dependencySets>

	<fileSets>
		<fileSet>
			<directory>../asakusa-windgate-plugin/src/main/dist/windgate</directory>
			<outputDirectory>windgate</outputDirectory>
			<fileMode>0755</fileMode>
			<directoryMode>0775</directoryMode>
			<lineEnding>unix</lineEnding>
		</fileSet>
		<fileSet>
			<directory>../asakusa-test-driver/src/main/dist/experimental/bin</directory>
			<outputDirectory>experimental/bin</outputDirectory>
			<fileMode>0744</fileMode>
			<directoryMode>0775</directoryMode>
			<lineEnding>unix</lineEnding>
		</fileSet>
		<fileSet>
			<directory>../asakusa-test-driver/src/main/dist/core/conf</directory>
			<outputDirectory>core/conf</outputDirectory>
			<fileMode>0644</fileMode>
			<directoryMode>0775</directoryMode>
			<lineEnding>unix</lineEnding>
		</fileSet>
		<fileSet>
			<directory>../asakusa-yaess-bootstrap/src/main/dist/yaess/bin</directory>
			<outputDirectory>yaess/bin</outputDirectory>
			<fileMode>0744</fileMode>
			<directoryMode>0775</directoryMode>
			<lineEnding>unix</lineEnding>
		</fileSet>
		<fileSet>
			<directory>../asakusa-yaess-bootstrap/src/main/dist/yaess/conf</directory>
			<outputDirectory>yaess/conf</outputDirectory>
			<fileMode>0644</fileMode>
			<directoryMode>0775</directoryMode>
			<lineEnding>unix</lineEnding>
		</fileSet>
		<fileSet>
			<directory>../asakusa-yaess-tools/src/main/dist/yaess/bin</directory>
			<outputDirectory>yaess/bin</outputDirectory>
			<fileMode>0744</fileMode>
			<directoryMode>0775</directoryMode>
			<lineEnding>unix</lineEnding>
		</fileSet>
		<fileSet>
			<directory>../asakusa-yaess-core/src/main/dist/yaess-hadoop/bin</directory>
			<outputDirectory>yaess-hadoop/bin</outputDirectory>
			<fileMode>0744</fileMode>
			<directoryMode>0775</directoryMode>
			<lineEnding>unix</lineEnding>
		</fileSet>
		<fileSet>
			<directory>../asakusa-yaess-core/src/main/dist/yaess-hadoop/conf</directory>
			<outputDirectory>yaess-hadoop/conf</outputDirectory>
			<fileMode>0644</fileMode>
			<directoryMode>0775</directoryMode>
			<lineEnding>unix</lineEnding>
		</fileSet>

		<!-- empty directory -->
		<fileSet>
			<directory>src/main/resources/assemblies</directory>
			<outputDirectory>batchapps</outputDirectory>
			<excludes>
				<exclude>*</exclude>
			</excludes>
			<directoryMode>0775</directoryMode>
		</fileSet>
		<fileSet>
			<directory>src/main/resources/assemblies</directory>
			<outputDirectory>ext/lib</outputDirectory>
			<excludes>
				<exclude>*</exclude>
			</excludes>
			<directoryMode>0775</directoryMode>
		</fileSet>
		<fileSet>
			<directory>src/main/resources/assemblies</directory>
			<outputDirectory>log</outputDirectory>
			<excludes>
				<exclude>*</exclude>
			</excludes>
			<directoryMode>0775</directoryMode>
		</fileSet>
	</fileSets>

</assembly>
