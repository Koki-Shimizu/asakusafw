<assembly
	xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
	<id>prod-thundergate-hc-exclude-lib</id>
	<formats>
		<format>jar</format>
	</formats>
	<includeBaseDirectory>false</includeBaseDirectory>

	<fileSets>
		<fileSet>
			<directory>../asakusa-thundergate/src/main/bin</directory>
			<outputDirectory>bulkloader/bin</outputDirectory>
			<includes>
				<include>.bulkloader_hc_profile</include>
				<include>collector.sh</include>
				<include>extractor.sh</include>
				<include>get-cache-info.sh</include>
				<include>delete-cache-storage.sh</include>
				<include>set-classpath-hc.sh</include>
			</includes>
			<fileMode>0744</fileMode>
			<directoryMode>0775</directoryMode>
			<lineEnding>unix</lineEnding>
		</fileSet>
		<fileSet>
			<directory>../asakusa-thundergate/src/main/conf</directory>
			<outputDirectory>bulkloader/conf</outputDirectory>
			<includes>
				<include>bulkloader-conf-hc.properties</include>
				<include>log4j.xml</include>
			</includes>
			<fileMode>0644</fileMode>
			<directoryMode>0775</directoryMode>
			<lineEnding>unix</lineEnding>
		</fileSet>
		<fileSet>
			<directory>../asakusa-thundergate/src/main/dist/thundergate-cache</directory>
			<outputDirectory>thundergate-cache</outputDirectory>
			<fileMode>0744</fileMode>
			<directoryMode>0775</directoryMode>
			<lineEnding>unix</lineEnding>
		</fileSet>
		<fileSet>
			<directory>../asakusa-test-driver/src/main/dist/core/conf</directory>
			<outputDirectory>core/conf</outputDirectory>
			<fileMode>0644</fileMode>
			<directoryMode>0775</directoryMode>
			<lineEnding>unix</lineEnding>
		</fileSet>
		<fileSet>
			<directory>../asakusa-test-driver/src/main/dist/experimental/bin</directory>
			<outputDirectory>experimental/bin</outputDirectory>
			<includes>
				<include>clean_hadoop_work.sh</include>
				<include>hadoop_job_run.sh</include>
			</includes>
			<fileMode>0744</fileMode>
			<directoryMode>0775</directoryMode>
			<lineEnding>unix</lineEnding>
		</fileSet>
		<fileSet>
			<directory>../asakusa-yaess-core/src/main/dist/yaess-hadoop/bin</directory>
			<outputDirectory>yaess-hadoop/bin</outputDirectory>
			<fileMode>0744</fileMode>
			<directoryMode>0775</directoryMode>
			<lineEnding>unix</lineEnding>
		</fileSet>
		<fileSet>
			<directory>../asakusa-yaess-core/src/main/dist/yaess-hadoop/conf</directory>
			<outputDirectory>yaess-hadoop/conf</outputDirectory>
			<fileMode>0644</fileMode>
			<directoryMode>0775</directoryMode>
			<lineEnding>unix</lineEnding>
		</fileSet>
		<fileSet>
			<directory>../asakusa-operation-tools/src/main/dist</directory>
			<outputDirectory>.</outputDirectory>
			<fileMode>0644</fileMode>
			<directoryMode>0755</directoryMode>
			<lineEnding>unix</lineEnding>
		</fileSet>
		
		<!-- empty directory -->
		<fileSet>
			<directory>src/main/resources/assemblies</directory>
			<outputDirectory>batchapps</outputDirectory>
			<excludes>
				<exclude>*</exclude>
			</excludes>
			<directoryMode>0775</directoryMode>
		</fileSet>
		<fileSet>
			<directory>src/main/resources/assemblies</directory>
			<outputDirectory>ext/lib</outputDirectory>
			<excludes>
				<exclude>*</exclude>
			</excludes>
			<directoryMode>0775</directoryMode>
		</fileSet>
		<fileSet>
			<directory>src/main/resources/assemblies</directory>
			<outputDirectory>log</outputDirectory>
			<excludes>
				<exclude>*</exclude>
			</excludes>
			<directoryMode>0775</directoryMode>
		</fileSet>
		<!-- lib -->
		<fileSet>
			<directory>src/main/resources/assemblies</directory>
			<outputDirectory>bulkloader/lib</outputDirectory>
			<excludes>
				<exclude>*</exclude>
			</excludes>
			<directoryMode>0775</directoryMode>
		</fileSet>
		<fileSet>
			<directory>src/main/resources/assemblies</directory>
			<outputDirectory>core/lib</outputDirectory>
			<excludes>
				<exclude>*</exclude>
			</excludes>
			<directoryMode>0775</directoryMode>
		</fileSet>
	</fileSets>

</assembly>
