<assembly
	xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
	<id>prod-thundergate-db</id>
	<formats>
		<format>tar.gz</format>
	</formats>
	<includeBaseDirectory>false</includeBaseDirectory>

	<dependencySets>
		<dependencySet>
			<scope>test</scope>
			<useProjectArtifact>false</useProjectArtifact>
			<outputDirectory>core/lib</outputDirectory>
			<includes>
				<include>com.asakusafw:asakusa-runtime</include>
				<include>com.asakusafw:asakusa-thundergate-runtime</include>
			</includes>
			<outputFileNameMapping>${artifact.artifactId}.${artifact.extension}</outputFileNameMapping>
			<fileMode>0644</fileMode>
			<directoryMode>0755</directoryMode>
		</dependencySet>
		<dependencySet>
			<scope>test</scope>
			<useProjectArtifact>false</useProjectArtifact>
			<outputDirectory>bulkloader/lib</outputDirectory>
			<includes>
				<include>com.asakusafw:asakusa-thundergate</include>
				<include>org.apache.hadoop:hadoop-core</include>
				<include>commons-configuration:commons-configuration</include>
				<include>commons-io:commons-io</include>
				<include>commons-lang:commons-lang</include>
				<include>commons-logging:commons-logging</include>
				<include>log4j:log4j</include>
				<include>mysql:mysql-connector-java</include>
				<include>org.apache.hadoop.thirdparty.guava:guava</include>
			</includes>
			<fileMode>0644</fileMode>
			<directoryMode>0755</directoryMode>
		</dependencySet>
		<dependencySet>
			<scope>test</scope>
			<useProjectArtifact>false</useProjectArtifact>
			<outputDirectory>yaess/lib</outputDirectory>
			<includes>
				<include>com.asakusafw:asakusa-yaess-bootstrap</include>
				<include>com.asakusafw:asakusa-yaess-core</include>
				<include>commons-cli:commons-cli</include>
				<include>ch.qos.logback:logback-classic</include>
				<include>ch.qos.logback:logback-core</include>
				<include>org.slf4j:slf4j-api</include>
			</includes>
			<fileMode>0644</fileMode>
			<directoryMode>0755</directoryMode>
		</dependencySet>
		<dependencySet>
			<scope>test</scope>
			<useProjectArtifact>false</useProjectArtifact>
			<outputDirectory>yaess/plugin</outputDirectory>
			<includes>
				<include>com.asakusafw:asakusa-yaess-flowlog</include>
				<include>com.asakusafw:asakusa-yaess-jsch</include>
				<include>com.asakusafw:asakusa-yaess-multidispatch</include>
				<include>com.asakusafw:asakusa-yaess-paralleljob</include>
				<include>com.jcraft:jsch</include>
			</includes>
			<fileMode>0644</fileMode>
			<directoryMode>0755</directoryMode>
		</dependencySet>
		<dependencySet>
			<scope>test</scope>
			<useProjectArtifact>false</useProjectArtifact>
			<outputDirectory>yaess/tools</outputDirectory>
			<includes>
				<include>com.asakusafw:asakusa-yaess-tools</include>
				<include>com.google.code.gson:gson</include>
			</includes>
			<fileMode>0644</fileMode>
			<directoryMode>0755</directoryMode>
		</dependencySet>
	</dependencySets>

	<fileSets>
		<fileSet>
			<directory>../asakusa-thundergate/src/main/dist</directory>
			<outputDirectory>/</outputDirectory>
			<includes>
				<include>bulkloader/bin/.bulkloader_db_profile</include>
				<include>bulkloader/bin/importer.sh</include>
				<include>bulkloader/bin/dbcleaner.sh</include>
				<include>bulkloader/bin/exporter.sh</include>
				<include>bulkloader/bin/finalizer.sh</include>
				<include>bulkloader/bin/recoverer.sh</include>
				<include>bulkloader/bin/release-cache-lock.sh</include>
				<include>bulkloader/bin/build-cache.sh</include>
				<include>bulkloader/bin/delete-cache-info.sh</include>
				<include>bulkloader/bin/gc-cache-storage.sh</include>
				<include>bulkloader/bin/set-classpath-db.sh</include>
				<include>bulkloader/conf/[targetname]-jdbc.properties</include>
				<include>bulkloader/conf/bulkloader-conf-db.properties</include>
				<include>bulkloader/conf/log4j.xml</include>
				<include>bulkloader/sql/**</include>
			</includes>
			<fileMode>0644</fileMode>
			<directoryMode>0755</directoryMode>
			<lineEnding>unix</lineEnding>
		</fileSet>
		<fileSet>
			<directory>../asakusa-test-driver/src/main/dist</directory>
			<outputDirectory>/</outputDirectory>
			<includes>
				<include>experimental/bin/hadoop_job_run_ssh_bridge.sh</include>
			</includes>
			<fileMode>0644</fileMode>
			<directoryMode>0755</directoryMode>
			<lineEnding>unix</lineEnding>
		</fileSet>
		<fileSet>
			<directory>../asakusa-yaess-bootstrap/src/main/dist</directory>
			<outputDirectory>/</outputDirectory>
			<fileMode>0644</fileMode>
			<directoryMode>0755</directoryMode>
			<lineEnding>unix</lineEnding>
		</fileSet>
		<fileSet>
			<directory>../asakusa-yaess-tools/src/main/dist</directory>
			<outputDirectory>/</outputDirectory>
			<fileMode>0644</fileMode>
			<directoryMode>0755</directoryMode>
			<lineEnding>unix</lineEnding>
		</fileSet>
		<fileSet>
			<directory>../asakusa-directio-plugin/src/main/dist</directory>
			<outputDirectory>/</outputDirectory>
			<fileMode>0644</fileMode>
			<directoryMode>0755</directoryMode>
			<lineEnding>unix</lineEnding>
		</fileSet>

		<!-- empty directory -->
		<fileSet>
			<directory>src/main/resources/assemblies</directory>
			<outputDirectory>batchapps</outputDirectory>
			<excludes>
				<exclude>*</exclude>
			</excludes>
			<directoryMode>0755</directoryMode>
		</fileSet>
		<fileSet>
			<directory>src/main/resources/assemblies</directory>
			<outputDirectory>log</outputDirectory>
			<excludes>
				<exclude>*</exclude>
			</excludes>
			<directoryMode>0755</directoryMode>
		</fileSet>
	</fileSets>

</assembly>
