<assembly
	xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
	<id>prod-thundergate-db</id>
	<formats>
		<format>tar.gz</format>
	</formats>
	<includeBaseDirectory>false</includeBaseDirectory>

	<dependencySets>
		<dependencySet>
			<scope>test</scope>
			<useProjectArtifact>false</useProjectArtifact>
			<outputDirectory>core/lib</outputDirectory>
			<includes>
				<include>com.asakusafw:asakusa-runtime</include>
				<include>com.asakusafw:asakusa-thundergate-runtime</include>
			</includes>
			<outputFileNameMapping>${artifact.artifactId}.${artifact.extension}</outputFileNameMapping>
			<fileMode>0644</fileMode>
			<directoryMode>0775</directoryMode>
		</dependencySet>
		<dependencySet>
			<scope>test</scope>
			<useProjectArtifact>false</useProjectArtifact>
			<outputDirectory>bulkloader/lib</outputDirectory>
			<includes>
				<include>com.asakusafw:asakusa-thundergate</include>
				<include>org.apache.hadoop:hadoop-core</include>
				<include>commons-configuration:commons-configuration</include>
				<include>commons-io:commons-io</include>
				<include>commons-lang:commons-lang</include>
				<include>commons-logging:commons-logging</include>
				<include>log4j:log4j</include>
				<include>mysql:mysql-connector-java</include>
			</includes>
			<fileMode>0644</fileMode>
			<directoryMode>0775</directoryMode>
		</dependencySet>
		<dependencySet>
			<scope>test</scope>
			<useProjectArtifact>false</useProjectArtifact>
			<outputDirectory>yaess/lib</outputDirectory>
			<includes>
				<include>com.asakusafw:asakusa-yaess-bootstrap</include>
				<include>com.asakusafw:asakusa-yaess-core</include>
				<include>commons-cli:commons-cli</include>
				<include>ch.qos.logback:logback-classic</include>
				<include>ch.qos.logback:logback-core</include>
				<include>org.slf4j:slf4j-api</include>
			</includes>
			<fileMode>0644</fileMode>
			<directoryMode>0775</directoryMode>
		</dependencySet>
		<dependencySet>
			<scope>test</scope>
			<useProjectArtifact>false</useProjectArtifact>
			<outputDirectory>yaess/plugin</outputDirectory>
			<includes>
				<include>com.asakusafw:asakusa-yaess-jsch</include>
				<include>com.asakusafw:asakusa-yaess-paralleljob</include>
				<include>com.jcraft:jsch</include>
			</includes>
			<fileMode>0644</fileMode>
			<directoryMode>0775</directoryMode>
		</dependencySet>
		<dependencySet>
			<scope>test</scope>
			<useProjectArtifact>false</useProjectArtifact>
			<outputDirectory>yaess/tools</outputDirectory>
			<includes>
				<include>com.asakusafw:asakusa-yaess-tools</include>
				<include>com.google.code.gson:gson</include>
			</includes>
			<fileMode>0644</fileMode>
			<directoryMode>0775</directoryMode>
		</dependencySet>
	</dependencySets>

	<fileSets>
		<fileSet>
			<directory>../asakusa-thundergate/src/main/bin</directory>
			<outputDirectory>bulkloader/bin</outputDirectory>
			<includes>
				<include>.bulkloader_db_profile</include>
				<include>importer.sh</include>
				<include>dbcleaner.sh</include>
				<include>exporter.sh</include>
				<include>finalizer.sh</include>
				<include>recoverer.sh</include>
				<include>release-cache-lock.sh</include>
				<include>build-cache.sh</include>
				<include>delete-cache-info.sh</include>
				<include>gc-cache-storage.sh</include>
				<include>set-classpath-db.sh</include>
			</includes>
			<fileMode>0744</fileMode>
			<directoryMode>0775</directoryMode>
			<lineEnding>unix</lineEnding>
		</fileSet>
		<fileSet>
			<directory>../asakusa-thundergate/src/main/conf</directory>
			<outputDirectory>bulkloader/conf</outputDirectory>
			<includes>
				<include>[targetname]-jdbc.properties</include>
				<include>bulkloader-conf-db.properties</include>
				<include>log4j.xml</include>
			</includes>
			<fileMode>0644</fileMode>
			<directoryMode>0775</directoryMode>
			<lineEnding>unix</lineEnding>
		</fileSet>
		<fileSet>
			<directory>../asakusa-thundergate/src/main/sql</directory>
			<outputDirectory>bulkloader/sql</outputDirectory>
			<fileMode>0644</fileMode>
			<directoryMode>0775</directoryMode>
			<lineEnding>unix</lineEnding>
		</fileSet>
		<fileSet>
			<directory>../asakusa-test-driver/src/main/dist/experimental/bin</directory>
			<outputDirectory>experimental/bin</outputDirectory>
			<includes>
				<include>hadoop_job_run_ssh_bridge.sh</include>
			</includes>
			<fileMode>0744</fileMode>
			<directoryMode>0775</directoryMode>
			<lineEnding>unix</lineEnding>
		</fileSet>
		<fileSet>
			<directory>../asakusa-yaess-bootstrap/src/main/dist/yaess/bin</directory>
			<outputDirectory>yaess/bin</outputDirectory>
			<fileMode>0744</fileMode>
			<directoryMode>0775</directoryMode>
			<lineEnding>unix</lineEnding>
		</fileSet>
		<fileSet>
			<directory>../asakusa-yaess-bootstrap/src/main/dist/yaess/conf</directory>
			<outputDirectory>yaess/conf</outputDirectory>
			<fileMode>0644</fileMode>
			<directoryMode>0775</directoryMode>
			<lineEnding>unix</lineEnding>
		</fileSet>
		<fileSet>
			<directory>../asakusa-yaess-tools/src/main/dist/yaess/bin</directory>
			<outputDirectory>yaess/bin</outputDirectory>
			<fileMode>0744</fileMode>
			<directoryMode>0775</directoryMode>
			<lineEnding>unix</lineEnding>
		</fileSet>
		<fileSet>
			<directory>../asakusa-directio-plugin/src/main/dist/directio/bin</directory>
			<outputDirectory>directio/bin</outputDirectory>
			<fileMode>0744</fileMode>
			<directoryMode>0775</directoryMode>
			<lineEnding>unix</lineEnding>
		</fileSet>
		
		<!-- empty directory -->
		<fileSet>
			<directory>src/main/resources/assemblies</directory>
			<outputDirectory>batchapps</outputDirectory>
			<excludes>
				<exclude>*</exclude>
			</excludes>
			<directoryMode>0775</directoryMode>
		</fileSet>
		<fileSet>
			<directory>src/main/resources/assemblies</directory>
			<outputDirectory>log</outputDirectory>
			<excludes>
				<exclude>*</exclude>
			</excludes>
			<directoryMode>0775</directoryMode>
		</fileSet>
	</fileSets>

</assembly>
