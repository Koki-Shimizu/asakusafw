<assembly
	xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
	<id>prod-db-exclude-lib</id>
	<formats>
		<format>jar</format>
	</formats>
	<includeBaseDirectory>false</includeBaseDirectory>

	<fileSets>
		<fileSet>
			<directory>../asakusa-thundergate/src/main/bin</directory>
			<outputDirectory>bulkloader/bin</outputDirectory>
			<includes>
				<include>.bulkloader_db_profile</include>
				<include>importer.sh</include>
				<include>dbcleaner.sh</include>
				<include>exporter.sh</include>
				<include>finalizer.sh</include>
				<include>recoverer.sh</include>
				<include>release-cache-lock.sh</include>
				<include>delete-cache-info.sh</include>
				<include>gc-cache-storage.sh</include>
				<include>set-classpath-db.sh</include>
			</includes>
			<fileMode>0744</fileMode>
			<directoryMode>0775</directoryMode>
			<lineEnding>unix</lineEnding>
		</fileSet>
		<fileSet>
			<directory>../asakusa-thundergate/src/main/conf</directory>
			<outputDirectory>bulkloader/conf</outputDirectory>
			<includes>
				<include>[targetname]-jdbc.properties</include>
				<include>bulkloader-conf-db.properties</include>
				<include>log4j.xml</include>
			</includes>
			<fileMode>0644</fileMode>
			<directoryMode>0775</directoryMode>
			<lineEnding>unix</lineEnding>
		</fileSet>
		<fileSet>
			<directory>../asakusa-thundergate/src/main/sql</directory>
			<outputDirectory>bulkloader/sql</outputDirectory>
			<fileMode>0644</fileMode>
			<directoryMode>0775</directoryMode>
			<lineEnding>unix</lineEnding>
		</fileSet>
		<fileSet>
			<directory>../asakusa-test-driver/src/main/dist/experimental/bin</directory>
			<outputDirectory>experimental/bin</outputDirectory>
			<includes>
				<include>hadoop_job_run_ssh_bridge.sh</include>
			</includes>
			<fileMode>0744</fileMode>
			<directoryMode>0775</directoryMode>
			<lineEnding>unix</lineEnding>
		</fileSet>
		<fileSet>
			<directory>../asakusa-yaess-bootstrap/src/main/dist/yaess/bin</directory>
			<outputDirectory>yaess/bin</outputDirectory>
			<fileMode>0744</fileMode>
			<directoryMode>0775</directoryMode>
			<lineEnding>unix</lineEnding>
		</fileSet>
		<fileSet>
			<directory>../asakusa-yaess-bootstrap/src/main/dist/yaess/conf</directory>
			<outputDirectory>yaess/conf</outputDirectory>
			<fileMode>0644</fileMode>
			<directoryMode>0775</directoryMode>
			<lineEnding>unix</lineEnding>
		</fileSet>
		<fileSet>
			<directory>../asakusa-yaess-tools/src/main/dist/yaess/bin</directory>
			<outputDirectory>yaess/bin</outputDirectory>
			<fileMode>0744</fileMode>
			<directoryMode>0775</directoryMode>
			<lineEnding>unix</lineEnding>
		</fileSet>
		
		<!-- empty directory -->
		<fileSet>
			<directory>src/main/resources/assemblies</directory>
			<outputDirectory>batchapps</outputDirectory>
			<excludes>
				<exclude>*</exclude>
			</excludes>
			<directoryMode>0775</directoryMode>
		</fileSet>
		<fileSet>
			<directory>src/main/resources/assemblies</directory>
			<outputDirectory>log</outputDirectory>
			<excludes>
				<exclude>*</exclude>
			</excludes>
			<directoryMode>0775</directoryMode>
		</fileSet>
		<!-- lib -->
		<fileSet>
			<directory>src/main/resources/assemblies</directory>
			<outputDirectory>bulkloader/lib</outputDirectory>
			<excludes>
				<exclude>*</exclude>
			</excludes>
			<directoryMode>0775</directoryMode>
		</fileSet>
		<fileSet>
			<directory>src/main/resources/assemblies</directory>
			<outputDirectory>core/lib</outputDirectory>
			<excludes>
				<exclude>*</exclude>
			</excludes>
			<directoryMode>0775</directoryMode>
		</fileSet>
		<fileSet>
			<directory>src/main/resources/assemblies</directory>
			<outputDirectory>yaess/lib</outputDirectory>
			<excludes>
				<exclude>*</exclude>
			</excludes>
			<directoryMode>0775</directoryMode>
		</fileSet>
		<fileSet>
			<directory>src/main/resources/assemblies</directory>
			<outputDirectory>yaess/plugin</outputDirectory>
			<excludes>
				<exclude>*</exclude>
			</excludes>
			<directoryMode>0775</directoryMode>
		</fileSet>
		<fileSet>
			<directory>src/main/resources/assemblies</directory>
			<outputDirectory>yaess/tools</outputDirectory>
			<excludes>
				<exclude>*</exclude>
			</excludes>
			<directoryMode>0775</directoryMode>
		</fileSet>
	</fileSets>

</assembly>
