<assembly
	xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
	<id>dev-exclude-lib</id>
	<formats>
		<format>jar</format>
	</formats>
	<includeBaseDirectory>false</includeBaseDirectory>
	
	<fileSets>
		<fileSet>
			<directory>../asakusa-thundergate/src/main/bin</directory>
			<outputDirectory>bulkloader/bin</outputDirectory>
			<fileMode>0744</fileMode>
			<directoryMode>0775</directoryMode>
			<lineEnding>unix</lineEnding>
		</fileSet>
		<fileSet>
			<directory>../asakusa-thundergate/src/main/conf</directory>
			<outputDirectory>bulkloader/conf</outputDirectory>
			<fileMode>0644</fileMode>
			<directoryMode>0775</directoryMode>
			<lineEnding>unix</lineEnding>
		</fileSet>
		<fileSet>
			<directory>../asakusa-thundergate/src/main/sql</directory>
			<outputDirectory>bulkloader/sql</outputDirectory>
			<fileMode>0644</fileMode>
			<directoryMode>0775</directoryMode>
			<lineEnding>unix</lineEnding>
		</fileSet>
		<fileSet>
			<directory>../asakusa-cleaner/src/main/bin</directory>
			<outputDirectory>cleaner/bin</outputDirectory>
			<fileMode>0744</fileMode>
			<directoryMode>0775</directoryMode>
			<lineEnding>unix</lineEnding>
		</fileSet>
		<fileSet>
			<directory>../asakusa-cleaner/src/main/conf</directory>
			<outputDirectory>cleaner/conf</outputDirectory>
			<fileMode>0644</fileMode>
			<directoryMode>0775</directoryMode>
			<lineEnding>unix</lineEnding>
		</fileSet>
		<fileSet>
			<directory>../asakusa-test-driver/src/main/dist/experimental/bin</directory>
			<outputDirectory>experimental/bin</outputDirectory>
			<fileMode>0744</fileMode>
			<directoryMode>0775</directoryMode>
			<lineEnding>unix</lineEnding>
		</fileSet>
		<fileSet>
			<directory>../asakusa-test-driver/src/main/dist/core/conf</directory>
			<outputDirectory>core/conf</outputDirectory>
			<fileMode>0644</fileMode>
			<directoryMode>0775</directoryMode>
			<lineEnding>unix</lineEnding>
		</fileSet>
		<fileSet>
			<directory>../asakusa-yaess-bootstrap/src/main/dist/yaess/bin</directory>
			<outputDirectory>yaess/bin</outputDirectory>
			<fileMode>0744</fileMode>
			<directoryMode>0775</directoryMode>
			<lineEnding>unix</lineEnding>
		</fileSet>
		<fileSet>
			<directory>../asakusa-yaess-bootstrap/src/main/dist/yaess/conf</directory>
			<outputDirectory>yaess/conf</outputDirectory>
			<fileMode>0644</fileMode>
			<directoryMode>0775</directoryMode>
			<lineEnding>unix</lineEnding>
		</fileSet>
		<fileSet>
			<directory>../asakusa-yaess-tools/src/main/dist/yaess/bin</directory>
			<outputDirectory>yaess/bin</outputDirectory>
			<fileMode>0744</fileMode>
			<directoryMode>0775</directoryMode>
			<lineEnding>unix</lineEnding>
		</fileSet>
		<fileSet>
			<directory>../asakusa-yaess-core/src/main/dist/yaess-hadoop/bin</directory>
			<outputDirectory>yaess-hadoop/bin</outputDirectory>
			<fileMode>0744</fileMode>
			<directoryMode>0775</directoryMode>
			<lineEnding>unix</lineEnding>
		</fileSet>
		<fileSet>
			<directory>../asakusa-yaess-core/src/main/dist/yaess-hadoop/conf</directory>
			<outputDirectory>yaess-hadoop/conf</outputDirectory>
			<fileMode>0644</fileMode>
			<directoryMode>0775</directoryMode>
			<lineEnding>unix</lineEnding>
		</fileSet>

		<!-- empty directory -->
		<fileSet>
			<directory>src/main/assembly</directory>
			<outputDirectory>batchapps</outputDirectory>
			<excludes>
				<exclude>*</exclude>
			</excludes>
			<directoryMode>0775</directoryMode>
		</fileSet>
		<fileSet>
			<directory>src/main/assembly</directory>
			<outputDirectory>ext/lib</outputDirectory>
			<excludes>
				<exclude>*</exclude>
			</excludes>
			<directoryMode>0775</directoryMode>
		</fileSet>
		<fileSet>
			<directory>src/main/assembly</directory>
			<outputDirectory>log</outputDirectory>
			<excludes>
				<exclude>*</exclude>
			</excludes>
			<directoryMode>0775</directoryMode>
		</fileSet>
		<fileSet>
			<directory>src/main/assembly</directory>
			<outputDirectory>temp</outputDirectory>
			<excludes>
				<exclude>*</exclude>
			</excludes>
			<directoryMode>0777</directoryMode>
		</fileSet>

		<!-- lib -->
		<fileSet>
			<directory>src/main/assembly</directory>
			<outputDirectory>bulkloader/lib</outputDirectory>
			<excludes>
				<exclude>*</exclude>
			</excludes>
			<directoryMode>0775</directoryMode>
		</fileSet>
		<fileSet>
			<directory>src/main/assembly</directory>
			<outputDirectory>core/lib</outputDirectory>
			<excludes>
				<exclude>*</exclude>
			</excludes>
			<directoryMode>0775</directoryMode>
		</fileSet>
		<fileSet>
			<directory>src/main/assembly</directory>
			<outputDirectory>cleaner/lib</outputDirectory>
			<excludes>
				<exclude>*</exclude>
			</excludes>
			<directoryMode>0775</directoryMode>
		</fileSet>
		<fileSet>
			<directory>src/main/assembly</directory>
			<outputDirectory>yaess/lib</outputDirectory>
			<excludes>
				<exclude>*</exclude>
			</excludes>
			<directoryMode>0775</directoryMode>
		</fileSet>
		<fileSet>
			<directory>src/main/assembly</directory>
			<outputDirectory>yaess/plugin</outputDirectory>
			<excludes>
				<exclude>*</exclude>
			</excludes>
			<directoryMode>0775</directoryMode>
		</fileSet>
		<fileSet>
			<directory>src/main/assembly</directory>
			<outputDirectory>yaess/tools</outputDirectory>
			<excludes>
				<exclude>*</exclude>
			</excludes>
			<directoryMode>0775</directoryMode>
		</fileSet>
	</fileSets>

</assembly>