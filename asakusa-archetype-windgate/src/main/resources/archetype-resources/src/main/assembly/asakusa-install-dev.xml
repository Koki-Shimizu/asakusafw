<assembly
	xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
	<id>asakusa-install-dev</id>
	<formats>
		<format>tar.gz</format>
	</formats>

	<includeBaseDirectory>false</includeBaseDirectory>

	<dependencySets>
		<dependencySet>
			<scope>test</scope>
			<useProjectArtifact>false</useProjectArtifact>
			<outputDirectory>/</outputDirectory>
			<includes>
				<include>com.asakusafw:asakusa-distribution</include>
			</includes>
			<unpack>true</unpack>
			<fileMode>0644</fileMode>
			<directoryMode>0775</directoryMode>
		</dependencySet>
		<dependencySet>
			<useProjectArtifact>false</useProjectArtifact>
			<outputDirectory>core/lib</outputDirectory>
			<includes>
				<include>com.asakusafw:asakusa-runtime</include>
			</includes>
			<outputFileNameMapping>${artifact.artifactId}.${artifact.extension}</outputFileNameMapping>
			<fileMode>0644</fileMode>
			<directoryMode>0775</directoryMode>
		</dependencySet>
		<dependencySet>
			<scope>test</scope>
			<useProjectArtifact>false</useProjectArtifact>
			<outputDirectory>windgate/lib</outputDirectory>
			<includes>
				<include>com.asakusafw:asakusa-windgate-bootstrap</include>
				<include>com.asakusafw:asakusa-windgate-core</include>
				<include>ch.qos.logback:logback-classic</include>
				<include>ch.qos.logback:logback-core</include>
				<include>org.slf4j:slf4j-api</include>
			</includes>
			<fileMode>0644</fileMode>
			<directoryMode>0775</directoryMode>
		</dependencySet>
		<dependencySet>
			<scope>test</scope>
			<useProjectArtifact>false</useProjectArtifact>
			<outputDirectory>windgate/plugin</outputDirectory>
			<includes>
				<include>com.asakusafw:asakusa-windgate-hadoopfs</include>
				<include>com.asakusafw:asakusa-windgate-jdbc</include>
				<include>mysql:mysql-connector-java</include>
			</includes>
			<fileMode>0644</fileMode>
			<directoryMode>0775</directoryMode>
		</dependencySet>
		<dependencySet>
			<scope>test</scope>
			<useProjectArtifact>false</useProjectArtifact>
			<outputDirectory>windgate-ssh/lib</outputDirectory>
			<includes>
				<include>com.asakusafw:asakusa-windgate-core</include>
				<include>com.asakusafw:asakusa-windgate-hadoopfs</include>
				<include>ch.qos.logback:logback-classic</include>
				<include>ch.qos.logback:logback-core</include>
				<include>org.slf4j:slf4j-api</include>
			</includes>
			<fileMode>0644</fileMode>
			<directoryMode>0775</directoryMode>
		</dependencySet>		
		<dependencySet>
			<scope>provided</scope>
			<useProjectArtifact>false</useProjectArtifact>
			<outputDirectory>cleaner/lib</outputDirectory>
			<includes>
				<include>org.apache.hadoop:hadoop-core</include>
				<include>commons-logging:commons-logging</include>
			</includes>
			<fileMode>0644</fileMode>
			<directoryMode>0775</directoryMode>
		</dependencySet>
		<dependencySet>
			<scope>test</scope>
			<useProjectArtifact>false</useProjectArtifact>
			<outputDirectory>cleaner/lib</outputDirectory>
			<includes>
				<include>com.asakusafw:asakusa-cleaner</include>
				<include>commons-io:commons-io</include>
				<include>commons-lang:commons-lang</include>
				<include>log4j:log4j</include>
			</includes>
			<fileMode>0644</fileMode>
			<directoryMode>0775</directoryMode>
		</dependencySet>
	</dependencySets>
</assembly>